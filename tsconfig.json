{
  "compilerOptions": {
    "target": "ES6",
    "module": "CommonJS",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "./dist",
    "rootDir": "./",
    "resolveJsonModule": true,
    "allowJs": true,
    "typeRoots": ["./src/types", "./node_modules/@types"]  
  },
  "include": ["src", "index.ts"],
  "exclude": ["node_modules", "dist"]
}
